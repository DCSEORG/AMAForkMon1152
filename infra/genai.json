    },
    "cognitiveServicesEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('cognitiveServicesName')), '2023-05-01').endpoint]"
    },
    "cognitiveServicesId": {
      "type": "string",
      "value": "[resourceId('Microsoft.CognitiveServices/accounts', variables('cognitiveServicesName'))]"
    },
    "cognitiveServicesPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('cognitiveServicesName')), '2023-05-01', 'full').identity.principalId]"

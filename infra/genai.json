      "kind": "CognitiveServices",
      "sku": {
        "name": "S0"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "customSubDomainName": "[variables('cognitiveServicesName')]",
        "publicNetworkAccess": "Enabled",
        "networkAcls": {
          "defaultAction": "Allow"
        }
      },
      "tags": "[parameters('tags')]"
    }
  ],
  "outputs": {
